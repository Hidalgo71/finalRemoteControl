<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animationCache="false"
    android:background="#7E00BCD4"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonLeft"
        android:layout_width="68dp"
        android:layout_height="58dp"
        android:layout_marginTop="288dp"
        android:background="#9EFF0000"
        android:text="<-"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="59dp" />

    <Button
        android:id="@+id/buttonRight"
        android:layout_width="68dp"
        android:layout_height="58dp"
        android:background="#9EFF0000"
        android:text="->"
        android:textSize="30"
        app:layout_constraintTop_toTopOf="@+id/buttonLeft"
        tools:layout_editor_absoluteX="159dp" />

    <Button
        android:id="@+id/buttonDown"
        android:layout_width="68dp"
        android:layout_height="58dp"
        android:layout_marginTop="324dp"
        android:background="#9EFF0000"
        android:ellipsize="none"
        android:text="↓"
        android:textSize="30"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="588dp" />

    <Button
        android:id="@+id/buttonUp"
        android:layout_width="68dp"
        android:layout_height="58dp"
        android:layout_marginTop="244dp"
        android:background="#9EFF0000"
        android:text="↑"
        android:textSize="30"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="588dp" />

    <Switch
        android:id="@+id/blueSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="43dp" />

    <TextView
        android:id="@+id/speedTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="510dp"
        tools:layout_editor_absoluteY="43dp" />

    <TextView
        android:id="@+id/showSpeedTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="588dp"
        tools:layout_editor_absoluteY="46dp" />

    <ImageButton
        android:id="@+id/bluetLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        app:srcCompat="@android:drawable/stat_sys_data_bluetooth"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="33dp" />

</androidx.constraintlayout.widget.ConstraintLayout>